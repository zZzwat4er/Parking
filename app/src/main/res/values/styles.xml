<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/MainText</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="btn_main">
        <item name="android:background">@drawable/main_btn</item>
        <item name="android:textColor">@color/whiteText</item>
    </style>
    <style name="btn_second">
        <item name="android:background">@drawable/secondary_btn</item>
        <item name="android:textColor">@color/MainText</item>
    </style>

    <style name="round_btn_main">
        <item name="android:background">@drawable/round_btn_main</item>
        <item name="android:textColor">@color/whiteText</item>
    </style>
    <style name="round_btn_second">
        <item name="android:background">@drawable/round_brn_second</item>
        <item name="android:textColor">@color/MainText</item>
    </style>

    <style name="clickable_layer">
        <item name="android:background">@drawable/layer</item>
    </style>

    <style name="edit_text">
        <item name="android:padding">6dp</item>
        <item name="android:background">@drawable/field_form</item>
    </style>

</resources>